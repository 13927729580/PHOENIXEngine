# ServerLinuxRobot

CFG ?= Debug

CC := /usr/bin/g++
CFLAGS := -c -std=c++11 -D__LINUX__

FMOD_LIB_PATH := ../../../ThirdPartiesLibs/FMOD/linux/lib

ifeq (ARM,$(findstring ARM,$(CFG)))
CFLAGS += -DPX2_USE_OPENGLES
FMOD_LIB_PATH := ../../../ThirdPartiesLibs/FMOD/linux/lib/armhf
else
CFLAGS += -DPX2_USE_OPENGL
FMOD_LIB_PATH := ../../../ThirdPartiesLibs/FMOD/linux/lib/x86
endif

ifeq (Debug,$(findstring Debug,$(CFG)))
CFLAGS += -g -D_DEBUG
else
CFLAGS += -O2 -DNDEBUG
endif

INCPATH := -I ../../../PX2SDK/Include/ \
	-I ./
	
SRC := $(notdir $(wildcard *.cpp))
OBJ := $(SRC:%.cpp=$(CFG)/%.o)
LIBPATH := -L ../../../PX2SDK/Library/$(CFG)
XLIBS := -lX11 -lXext

ifeq (ARM,$(findstring ARM,$(CFG)))
WLIBS := -lPX2EngineARM
GLIBS := -lGLESv2 -lEGL
else
WLIBS := -lPX2Engine
GLIBS := -lGL -lGLU
endif

LIBS := $(WLIBS) $(XLIBS) $(GLIBS) -lpthread -lm -ldl -lfmod -L$(FMOD_LIB_PATH)

build : $(OBJ)
	$(CC) $(LIBPATH) $(OBJ) -o $(APP).$(CFG) $(LIBS)

$(CFG)/%.o : %.cpp
	@mkdir -p $(CFG)
	$(CC) $(CFLAGS) $(INCPATH) $< -o $@

clean :
	rm -rf $(CFG)
	rm -f $(APP).$(CFG)
